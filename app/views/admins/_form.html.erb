<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<% end %>
<div class="row ml-0">
  <%= form_with model: user, local: true do |form| %>
    <%= errors_for user %>
    <div class="form-group">
      <%= form.label :Administrator %><br/>
      <%= form.check_box :admin, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :username %><br/>
      <%= form.text_field :username, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :full_name %><br/>
      <%= form.text_field :full_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :email %><br/>
      <%= form.text_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br/>
      <%= form.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation %><br/>
      <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :age %><br/>
      <%= form.text_field :age, class: "form-control" %>
    </div>
    <div class="form-group">
      <% form.label :Image %>
      <br>
      <% form.file_field :flyer %>
    </div>
    <div class="form-group mt-2">
      <br>
      <%= form.submit submit_btn_text, class: ["btn", "btn-primary"] %>
    </div>
  <% end %>
</div>