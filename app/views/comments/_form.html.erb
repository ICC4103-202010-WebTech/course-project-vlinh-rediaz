<%= form_with(model: comment, local: true) do |form| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
        <% comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

<div class="row ml-0">
  <%= form_with model: comment, local: true do |form| %>
    <%= errors_for comment %>
    <div class="form-group">
      <%= form.label :message %>:
      <%= form.text_area :message, class: "form-control" %>
    </div>
    <% if action_name == 'edit' %>
      <%= form.label "Delete"%>
      <%= form.check_box :_destroy %>
    <% end %>
    <% if action_name == 'new' %>
      <div class="form-group">
        <%= form.label :event %>
        <%= form.collection_select(:event_id, Event.all.order(name: :asc), :id, :name, {}, { class: "form-control" }) %>
      </div>
      <div class="form-group">
        <%= form.label :user %>
        <%= form.collection_select(:user_id, User.all.order(name: :asc), :id, :username, {}, { class: "form-control" }) %>
      </div>
      <div class="form-group mt-2">
        <%= form.submit submit_btn_text, class: ["btn", "btn-primary"] %>
        <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
      </div>
    <% end %>
  <% end %>
</div>
