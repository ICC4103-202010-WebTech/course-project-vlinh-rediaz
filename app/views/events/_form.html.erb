<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

<div class="row ml-0">
  <%= form_with model: event, local: true do |form| %>
    <%= errors_for event %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :location %>
      <%= form.text_area :location, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :starting_event_date %>
      <%= form.datetime_local_field :starting_event_date %>
    </div>
    <div class="form-group">
      <%= form.label :event_privacy %>
      <%= form.text_area :event_privacy, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :organization %>
      <%= form.collection_select(:organization_id, Organization.all.order(name: :asc), :id, :name, {}, { class: "form-control" }) %>
    </div>
    <div class="form-group">
      <%= form.label :user %>
      <%= form.collection_select(:user_id, User.all.order(name: :asc), :id, :username, {}, { class: "form-control" }) %>
    </div>
    <div class="form-group">
      <%= form.label :Image %>
      <br>
      <%= form.file_field :flyer%>
    </div>
    <div class="form-group mt-2">
      <%= form.submit submit_btn_text, class: ["btn", "btn-primary"] %>
      <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
    </div>
    <% if action_name == 'edit' %>
      <%= form.label "Invite"%>
      <%= form.check_box :_destroy %>
    <% end %>
  <% end %>
</div>