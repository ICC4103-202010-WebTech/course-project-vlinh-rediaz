           show sign in (log in) and sign up (register) links. -->

      <!-- This link is a place holder for the actual links you need to add here -->

      <!-- END TODO -->
      </span>
  </ul>
</nav>

<body>
<div id="container">

  <aside id="customer_info">
    <% if user_signed_in? %>
      <h4>Welcome <!%= @current_user.full_name %></h4>
    <% else %>
      <h4>Welcome guest</h4>
    <% end %>
  </aside>
  <main>
    <% if notice.present? %>
      <%= render partial: "notice" %>
    <% end %>
    <% if alert.present? %>
      <%= render partial: "alert" %>
    <% end %>
    <%= yield %>
  </main>
</div>
</body>

