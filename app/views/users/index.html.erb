<h1>Users</h1>

<%= form_tag users_path, :method => "get" do %>
  <%=text_field_tag :search, params[:search], placeholder: "Search..." %>
  <%=submit_tag("Search", :name => nil) %>
<%end %>

<div class="flex-container">
  <% @users.each do |user| %>
    <%= render partial: 'user_tile', locals: { user: user } %>
  <% end %>
</div>