<% @useronevent.each do |user| %>
  <% if user.user_id == @user.id %>
    <% @event.each do |event| %>
      <% if user.event_id == event.id %>
        - <%= link_to event.name, event %><br>
      <% end %>
    <% end %>
  <% end %>
<% end %>

