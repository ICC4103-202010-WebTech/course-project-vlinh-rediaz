<h1>Profile</h1>
<% if @user.flyer.attached? %>
  <%= image_tag(@user.flyer, class: "flex-image2", data: {target: "#myModal", toggle: "modal"}) %>
<% else %>
  <img class="flex-image2" src="https://www.madrimasd.org/blogs/wp-content/plugins/all-in-one-seo-pack/images/default-user-image.png">
<% end %>
<h2>User Info:</h2>
<p>Username: <%= @user.username %>
  <br>Full Name: <%= @user.full_name %>
  <br>Age: <%= @user.age %>
  <br>Email: <%= @user.email %>
  <br>id: <%= @user.id %>
</p>
